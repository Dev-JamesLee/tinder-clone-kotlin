<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.businesstinder.tinder">

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="com.businesstinder.tinder.MainActivity" />
        <activity android:name="com.businesstinder.tinder.ChooseLoginRegistrationActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.businesstinder.tinder.RegistrationActivity" />
        <activity android:name="com.businesstinder.tinder.LoginActivity" />
        <activity android:name="com.businesstinder.tinder.SettingsActivity" />
        <activity android:name="com.businesstinder.tinder.Matches.MatchesActivity" />
        <activity android:name="com.businesstinder.tinder.Chat.ChatActivity"></activity>
    </application>

</manifest>